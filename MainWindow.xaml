<Window x:Class="ElizadeEHR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ElizadeEHR - Login"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#265474">

    <Grid>
        <!-- Centering Structure -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Login Form (Centered) -->
        <Border Background="White" Padding="20"
                Grid.Row="1" Grid.Column="1"
                Width="300" Height="350"
                CornerRadius="10"
                BorderBrush="Gray" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center">

                <!-- Horizontal StackPanel for Logo -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ElizadeEHR"
                               FontSize="28"
                               Foreground="Black"
                               
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <Image Source="/Icons/icons8-heart-with-pulse-64.png" Width="34" Height="33" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Username Input with Rounded Corners -->
                <TextBlock Text="Username" FontSize="14" Margin="0,20,0,5"/>
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="8">
                    <TextBox x:Name="txtUsername"
                             KeyDown="InputField_KeyDown"
                             GotFocus="txtUsername_GotFocus"
                             LostFocus="txtUsername_LostFocus"
                             Width="260" Height="40"
                             FontSize="16"
                             Foreground="Gray"
                             Background="Transparent"
                             BorderThickness="0"
                             Text="lastname.firstname"
                             Padding="7" TextChanged="txtUsername_TextChanged"/>
                </Border>

                <!-- Password Input with Rounded Corners -->
                <TextBlock Text="Password" FontSize="14" Margin="0,20,0,5"/>
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="8">
                    <PasswordBox Name="txtPassword"
                                 KeyDown="InputField_KeyDown"
                                 Width="260"
                                 Height="40"
                                 Padding="10"
                                 FontSize="16"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                </Border>

                <!-- Login Button -->
                <Button Name="btnLogin" Content="Login" Width="260" Height="40"
                        Foreground="White" FontSize="16"
                        Margin="0,30,0,0" Cursor="Hand" Click="btnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="5"
                                                BorderBrush="Gray"
                                                BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2E5665"/>
                                                <!-- 5% Brighter -->
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1E3D4A"/>
                                                <!-- Slightly Darker when clicked -->
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="#264653"/>
                            <!-- Default color -->
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock Name="lblErrorMessage"
           Foreground="Red"
           FontSize="12"
           Visibility="Collapsed"
           TextAlignment="Center"
           Margin="0,0,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
