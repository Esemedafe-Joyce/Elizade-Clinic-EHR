<UserControl x:Class="ElizadeEHR.PatientPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElizadeEHR"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Filter/Search -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
                <TextBlock Text="Patient Management" FontSize="35" FontWeight="Bold" Foreground="#26547C" VerticalAlignment="Center"/>
            <Button Content="Add New Patient" FontSize="20" Height="55"  Margin="30 0 0 0" Padding="5 5" Click="AddPatientButton_Click" Style="{StaticResource RoundedDashboardButtonStyle}" Width="244"/>
        </StackPanel>

            <!-- Filter/Search -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 10">
                <Grid Width="450" Margin="0,0,10,0" Height="40">
                    <TextBox x:Name="SearchBox"
             Style="{StaticResource SearchTextBoxStyle}"
             TextChanged="SearchBox_TextChanged"/>
                    <TextBlock x:Name="SearchPlaceholder"
               Text="Search by name or email..."
               Foreground="#888"
               FontFamily="Poppins"
               FontSize="13"
               Margin="10,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"
               Visibility="Visible"/>
                    <Button x:Name="SearchButton" 
                Background="Transparent" 
                BorderThickness="0"
                HorizontalAlignment="Right" 
                Click="SearchButton_Click" 
                Cursor="Hand">
                        <Image Source="/Icons/icons8-search-50.png" Width="35" Height="35"/>
                    </Button>
                </Grid>
                
            <ComboBox x:Name="RoundedComboBoxStyle"
                      Width="150"
          Height="30"
          Background="#FF26547C"
BorderBrush="#26547C"
          BorderThickness="0"
          Padding="10,0"
          VerticalContentAlignment="Center"
          SelectionChanged="GenderFilterComboBox_SelectionChanged"
                      
                      Style="{StaticResource ResourceKey=RoundedComboBoxStyle}">
                <ComboBoxItem Content="Gender" IsSelected="True" IsEnabled="False" />
                <ComboBoxItem Content="All"/>
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
            </ComboBox>

          
        </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="PatientsDataGrid" Grid.Row="2"       
                  AutoGenerateColumns="False"
                      CanUserReorderColumns="False"
      CanUserResizeColumns="False"
      HeadersVisibility="Column"
      Margin="4"
      FontSize="13"
      FontFamily="Poppins"
      IsReadOnly="True"
      CanUserAddRows="False"
      Background="#F7FBFF"
      RowBackground="White"
      AlternatingRowBackground="#E5F0FA"
      GridLinesVisibility="All"
      BorderBrush="#D1D1D1"
      BorderThickness="1"
      SelectionMode="Single"
      SelectionUnit="FullRow"
      HorizontalAlignment="Stretch" SelectionChanged="PatientsDataGrid_SelectionChanged">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Padding" Value="5"/>
                    <Setter Property="Background" Value="White"/>
                </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="Auto"/>
                <DataGridTextColumn Header="DateOfBirth" Binding="{Binding DateOfBirth}" Width="Auto"/>
                <DataGridTextColumn Header="Matric Number" Binding="{Binding MatricNumber}" Width="auto"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="Auto"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTemplateColumn Header="Actions" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit" Margin="5" Click="EditPatient_Click" Style="{StaticResource ActionButtonStyle}"  Background="#26547C" Foreground="White"/>
                                    <Button Content="Delete" Margin="5" Click="DeletePatient_Click" Style="{StaticResource ActionButtonStyle}" Background="#26547C" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </UserControl>
