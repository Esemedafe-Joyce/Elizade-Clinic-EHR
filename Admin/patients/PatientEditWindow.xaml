<Window
    x:Class="ElizadeEHR.PatientEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Patient Edit"
    Height="430"
    Width="500"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">

    <Grid>
        <StackPanel Margin="20">
            <!-- First Name and Last Name -->
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- First Name -->
                <Grid Grid.Column="0">
                    <TextBox x:Name="FirstNameTextBox"
                             FontFamily="Poppins"
                             FontSize="13"
                             Padding="5"
                             VerticalContentAlignment="Center"
                             TextChanged="FirstNameTextBox_TextChanged"/>
                    <TextBlock x:Name="FirstNamePlaceholder"
                               Text="First Name"
                               Foreground="#888"
                               FontFamily="Poppins"
                               FontSize="13"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>

                <!-- Last Name -->
                <Grid Grid.Column="2">
                    <TextBox x:Name="LastNameTextBox"
                             FontFamily="Poppins"
                             FontSize="13"
                             Padding="5"
                             VerticalContentAlignment="Center"
                             TextChanged="LastNameTextBox_TextChanged"/>
                    <TextBlock x:Name="LastNamePlaceholder"
                               Text="Last Name"
                               Foreground="#888"
                               FontFamily="Poppins"
                               FontSize="13"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>
            </Grid>

            <!-- Date of Birth -->
            <Grid Margin="0,10">
                <DatePicker x:Name="DateOfBirthPicker"
                            
                            FontFamily="Poppins"
                            FontSize="13"
                            VerticalContentAlignment="Center"
                            SelectedDateChanged="DateOfBirthPicker_SelectedDateChanged"/>
                <TextBlock x:Name="DateOfBirthPlaceholder"
                           
                           Foreground="#888"
                           FontFamily="Poppins"
                           FontSize="13"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="Visible"/>
            </Grid>
            
            <!-- Matric Number -->
            <Grid Margin="0,10">
                <TextBox x:Name="MatricNumberTextBox"
             FontFamily="Poppins"
             FontSize="13"
             Padding="5"
             VerticalContentAlignment="Center"
             TextChanged="MatricNumberTextBox_TextChanged"/>
                <TextBlock x:Name="MatricNumberPlaceholder"
               Text="Matric Number"
               Foreground="#888"
               FontFamily="Poppins"
               FontSize="13"
               Margin="10,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"
               Visibility="Visible"/>
            </Grid>

            <!-- Email -->
            <Grid Margin="0,10">
                <TextBox x:Name="EmailTextBox"
                         FontFamily="Poppins"
                         FontSize="13"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         TextChanged="EmailTextBox_TextChanged"/>
                <TextBlock x:Name="EmailPlaceholder"
                           Text="Email"
                           Foreground="#888"
                           FontFamily="Poppins"
                           FontSize="13"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="Visible"/>
            </Grid>

            <!-- Phone -->
            <Grid Margin="0,10">
                <TextBox x:Name="PhoneTextBox"
                         FontFamily="Poppins"
                         FontSize="13"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         TextChanged="PhoneTextBox_TextChanged"
                         PreviewTextInput="PhoneTextBox_PreviewTextInput"/>
                <TextBlock x:Name="PhonePlaceholder"
                           Text="Phone Number"
                           Foreground="#888"
                           FontFamily="Poppins"
                           FontSize="13"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="Visible"/>
            </Grid>

            <!-- Gender -->
            <ComboBox x:Name="GenderComboBox"
                      Margin="0,10"
                      Height="30"
                      Foreground="White"
                      Background="#FF26547C"
                      BorderBrush="#26547C"
                      BorderThickness="0"
                      Padding="10,0"
                      VerticalContentAlignment="Center"
                      SelectionChanged="GenderComboBox_SelectionChanged"
                      Style="{StaticResource RoundedComboBoxStyle}" Width="453">
                <ComboBoxItem Content="Gender" IsSelected="True" IsEnabled="False"/>
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
            </ComboBox>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Save" Width="100" Margin="10,0" Click="SaveButton_Click" Style="{StaticResource RoundedPrimaryButtonStyle}"/>
                <Button Content="Cancel" Width="100" Margin="10,0" Click="CancelButton_Click" Style="{StaticResource RoundedPrimaryButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
